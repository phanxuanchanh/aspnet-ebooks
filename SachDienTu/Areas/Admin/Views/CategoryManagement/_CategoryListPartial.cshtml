<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
                <tr role="row">
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending">@Html.DisplayNameFor(model => model.name)</th>
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending">@Html.DisplayNameFor(model => model.createAt)</th>
                    <th>Công cụ</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.name)</th>
                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.createAt)</th>
                    <th rowspan="1" colspan="1">Công cụ</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (Category category in ViewBag.Categories)
                {
                    <tr role="row">
                        <td>@category.name</td>
                        <td>@category.createAt</td>
                        <td>
                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = category.ID }) |
                            @Html.ActionLink("Xem chi tiết", "Detail", new { id = category.ID }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = category.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-5">
        <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">Hiển thị @pagedInfo.PageSize trên tổng số @pagedInfo.TotalItemCount tác giả</div>
    </div>
    <div class="col-sm-12 col-md-7">
        <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
            <ul class="pagination">
                @Html.PagedListPager((IPagedList)ViewBag.Categories, p => Url.Action("Index", "CategoryManagement", new { page = p }),
                    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-itemm" },
                            PageClasses = new string[] { "page-link" }
                        },
                        ajaxOptions: new AjaxOptions
                        {
                            UpdateTargetId = "dataTable",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"
                        }
                    )
                )
            </ul>
        </div>
    </div>
</div>
