@model SachDienTu.Models.ApplicationUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.SiteName</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-bordered table table-hover">
                    <tbody>
                        <tr>
                            <th style="width:25%;">@Html.DisplayNameFor(model => model.UserName)</th>
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                        </tr>
                        <tr>
                            <th style="width:25%;">@Html.DisplayNameFor(model => model.LastName)</th>
                            <td>@Html.DisplayFor(model => model.LastName)</td>
                        </tr>
                        <tr>
                            <th style="width:25%;">@Html.DisplayNameFor(model => model.FirstName)</th>
                            <td>@Html.DisplayFor(model => model.FirstName)</td>
                        </tr>
                        <tr>
                            <th style="width:25%;">@Html.DisplayNameFor(model => model.Email)</th>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr>
                            <th style="width:25%;">@Html.DisplayNameFor(model => model.Roles)</th>
                            <td>
                                <ul>
                                    @foreach (string role in ViewBag.Roles)
                                    {
                                        <li>@role</li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Xóa phân quyền", "DeleteRoleFromUser", new { userId = Model.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Quay về danh sách", "Users", "null", htmlAttributes: new { @class = "btn btn-success" })
    </div>
</div>

